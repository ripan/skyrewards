<div class="col-md-12">
  <%= link_to 'New Reward', new_reward_path %>
  <p id="notice"><%= notice %></p>
  <h1>Listing Rewards</h1>
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Channels</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.name %></td>
        <td>
          <% reward.channels.each do |channel| %>
          <span class="label label-info"><%=channel.name%></span>
          <%end%>
        </td>
        <td>
          <span class="pull-right">
            <%= link_to 'Show', reward , :class=>"btn btn-default btn-xs"%>
            <%= link_to 'Edit', edit_reward_path(reward) , :class=>"btn btn-primary btn-xs"%>
            <%= link_to 'Destroy', reward, method: :delete, data: { confirm: 'Are you sure?' } , :class=>"btn btn-danger btn-xs"%>
          </span>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>